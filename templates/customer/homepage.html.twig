{% extends 'base.html.twig' %}

{% block title %}Yakoi | Accueil{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="d-flex justify-content-center">
                <a href="{{ path('home_customer') }}"><img src="{{ asset('/public/images/logo-yakoa.svg') }}" class="w-100" alt=""></a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <input class="form-control bg-light my-3 mx-auto" list="datalistOptions" id="exampleDataList" placeholder="Rechercher">
            <datalist id="datalistOptions">
                <option value="iPhone">
                <option value="PlayStation">
                <option value="Frigo">
                <option value="Aspirateur">
            </datalist>
            <h2 class="h4">Sélection du mois</h2>
            <div class="best-products">
                {% for product in products %}
                    <a href="{{ path('product', { id: product.id }) }}">
                        <div class="card-category {% if product.category.id == 6 %} pink-category {% endif %} {% if product.category.id == 3 %} red-category {% endif %} {% if product.category.id == 7 %} blue-category {% endif %} {% if product.category.id == 8 %} yellow-category {% endif %} {% if product.category.id == 9 %} green-category {% endif %} mt-3">
                            <h3>{{ product.name }}</h3>
                            <img src="{{ product.image }}" alt="Lave linge">
                        </div>
                    </a>
                {% endfor %}
            </div>
            <h2 class="h4 mt-3">Catégories</h2>
            <div class="best-products">
                <a href="{{ path('one-category', { id: 9 }) }}">
                <div class="card-category mt-3 category1" style="background: url('https://www.raphaelbeaudet.fr/wp-content/uploads/2021/06/petit-electromenager.svg') no-repeat;">
                    <h3>Petit électroménager</h3>
                    <img src="https://www.raphaelbeaudet.fr/wp-content/uploads/2021/06/cafetiere.png" alt="">
                </div>
                </a>
                <a href="{{ path('one-category', { id: 3 }) }}">
                <div class="card-category yellow-category mt-3 category2" style="background: url('https://www.raphaelbeaudet.fr/wp-content/uploads/2021/06/informatique-category.svg') no-repeat;">
                    <h3>Multimédia</h3>
                    <img src="https://www.raphaelbeaudet.fr/wp-content/uploads/2021/06/mac.png" alt="">
                </div>
                </a>
                <a href="{{ path('one-category', { id: 8 }) }}">
                <div class="card-category red-category mt-3" style="background: url('https://www.raphaelbeaudet.fr/wp-content/uploads/2021/06/eclairage-category.svg') no-repeat;">
                    <h3>Éclairage</h3>
                    <img src="https://www.raphaelbeaudet.fr/wp-content/uploads/2021/06/lumiere.png" alt="">
                </div>
                </a>
                <a href="{{ path('one-category', { id: 6 }) }}">
                <div class="card-category blue-category mt-3 category4" style="background: url('https://www.raphaelbeaudet.fr/wp-content/uploads/2021/06/electromenager.svg') no-repeat;">
                    <h3>Électroménager</h3>
                    <img src="https://www.raphaelbeaudet.fr/wp-content/uploads/2021/06/frigo.png" alt="">
                </div>
                </a>
                <a href="{{ path('one-category', { id: 7 }) }}">
                <div class="card-category yellow-category mt-3 category5" style="background: url('https://www.raphaelbeaudet.fr/wp-content/uploads/2021/06/tv-audio.svg') no-repeat;">
                    <h3>TV & Audio</h3>
                    <img src="https://www.raphaelbeaudet.fr/wp-content/uploads/2021/06/television.png" alt="">
                </div>
                </a>
            </div>
        </div>
    </div>
    <div class="container last-container">
        <div class="row">
            <nav class="col navbar navbar-expand bg-light navbar-light w-75">
                <div id="navbarContent" class="collapse navbar-collapse">
                    <ul class="navbar-nav d-flex justify-content-around w-100">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("home_customer") }}"><img src="{{ asset("/public/images/icons/Home.svg") }}" alt="House icon"></a>
                        </li>
                        <li class="nav-item search">
                            <a class="nav-link" href="#exampleDataList"><img src="{{ asset("/public/images/icons/Search.svg") }}" alt="Search icon"></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("account") }}"><img src="{{ asset("/public/images/icons/User_cicrle.svg") }}" alt=""></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
{% endblock %}